{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2015",
		"lib": ["ES2021"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "react",
		"strict": true,
		"noEmit": true,
		"allowUnreachableCode": false,
		"noFallthroughCasesInSwitch": false,
		"paths": {
			"assets/*": ["./src/assets/*"],
			"styles/*": ["./src/styles/*"],
			"components/*": ["./src/components/*"],
			"routes": ["./src/routes"],
			"routes/*": ["./src/routes/*"],
			"services/*": ["./src/services/*"],
			"settings": ["./src/settings"],
			"utils/*": ["./src/utils/*"],
			"i18n": ["./src/i18n"],
			"i18n/*": ["./src/i18n/*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx"],
	"exclude": ["./node_modules"]
}
